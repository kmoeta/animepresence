{
  "manifest_version": 3,
  "name": "Anime Discord Presence",
  "version": "1.1",
  "permissions": ["tabs", "scripting", "activeTab"],
  "host_permissions": ["*://hianime.to/*", "http://localhost:3000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://hianime.to/*"],
      "js": ["content.js"]
    }
  ]
}